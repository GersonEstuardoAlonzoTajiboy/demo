<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.DashboardController"
            prefWidth="600" prefHeight="400">

    <top>
        <Label text="Dashboard / Management View" styleClass="dashboard-title" BorderPane.alignment="CENTER"/>
    </top>

    <!-- Container for TilesFX -->
    <center>
        <HBox fx:id="tileContainer" spacing="20" alignment="CENTER" BorderPane.alignment="CENTER"/>
    </center>

    <!-- Container for the form (FormsFX) -->
    <bottom>
        <VBox fx:id="formContainer" spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
        </VBox>
    </bottom>
</BorderPane>
